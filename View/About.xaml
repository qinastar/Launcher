<Page
    x:Class="Launcher.View.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Launcher.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About"
    d:DesignHeight="450"
    d:DesignWidth="800"
    FontSize="14"
    mc:Ignorable="d">

    <StackPanel Margin="20,40,20,20">

        <TextBlock
            FontSize="20"
            FontWeight="Bold"
            Text="关于" />


        <TextBlock Margin="0,10,0,5" Text="Launcher by SwetyCore" />

        <TextBlock Margin="0,5" Text=" + 支持的版本:3.1, 3.2, 3.2.50, 3.3, 与 gc-toolkit/RSAPatch 保持同步。" />

        <TextBlock
            Margin="0,5"
            Cursor="Hand"
            Foreground="#FF006DFF"
            MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
            Tag="https://github.com/gc-toolkit/Launcher"
            Text="[开源地址]:https://github.com/gc-toolkit/Launcher" />

        <TextBlock
            Margin="0,5"
            Cursor="Hand"
            Foreground="#FF006DFF"
            MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
            Tag="https://github.com/34736384/RSAPatch"
            Text="[感谢]:https://github.com/34736384/RSAPatch" />

    </StackPanel>
</Page>
